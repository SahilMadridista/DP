<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/outerlayout"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/innerlayout"
        android:layout_margin="2dp"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/dogimage"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/dogimage">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerHorizontal="true"
                android:text="Dog's Name"
                android:id="@+id/dog_name_textview"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/dog_name_textview"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/dog_age_textview"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dog_gender_textview"
                android:layout_marginTop="10dp"
                android:layout_below="@id/dog_age_textview"
                android:layout_centerHorizontal="true"
                android:text="Gender"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dog_breed_textview"
                android:layout_marginTop="10dp"
                android:layout_below="@id/dog_gender_textview"
                android:layout_centerHorizontal="true"
                android:text="Breed"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Owner's Info"
                android:id="@+id/owner_contact_header_textview"
                android:layout_centerHorizontal="true"
                android:textSize="10sp"
                android:layout_above="@id/owner_name_textview"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/owner_name_textview"
                android:layout_centerHorizontal="true"
                android:text="Owner's Name"
                android:textSize="13sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_above="@id/owner_contact_textview"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Owner's Contact"
                android:id="@+id/owner_contact_textview"
                android:layout_centerHorizontal="true"
                android:textSize="13sp"
                android:textIsSelectable="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:textColor="@color/colorPrimaryDark"/>



        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>